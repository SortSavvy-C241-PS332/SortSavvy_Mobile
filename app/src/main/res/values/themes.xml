<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SortSavvy" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_green</item>
<!--        <item name="colorPrimaryVariant">@color/emerald_green</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/lavender_purple</item>-->
<!--        <item name="colorSecondaryVariant">@color/lavender_purple</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SortSavvy" parent="Base.Theme.SortSavvy" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen" >
        <!-- background color -->
        <item name="windowSplashScreenBackground" >@color/background_white_gray</item>
        <!-- icon -->
        <item name="windowSplashScreenAnimatedIcon" >@drawable/splashscreen_logo_sortsavvy</item>
        <!-- theme mana yang akan ditampilkan setelah splash screen -> welcome activity -->
        <item name="postSplashScreenTheme" >@style/Theme.SortSavvy</item>
    </style>

<!--    Text Style -->
    <style name="TextContent" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:fontFamily">@font/baloo_bhai_2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.GreenEmerald" >
        <item name="android:textColor">@color/font_emerald_green</item>
    </style>

    <style name="TextContent.LightGray" >
        <item name="android:textColor">@color/font_light_gray</item>
    </style>

    <style name="TextContent.GreenEmerald.Title" >
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="TextContent.TitleEditText" >
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="TextContent.Description" >
        <item name="android:layout_marginTop">7dp</item>
    </style>

<!--    Button Style -->
    <style name="ButtonGeneral">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">@color/font_green</item>
        <item name="android:fontFamily">@font/baloo_bhai_2</item>
        <item name="cornerRadius">48dp</item>
    </style>

    <style name="ButtonGeneral.ActiveGreen">
        <item name="android:backgroundTint">@color/background_green</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
        <item name="android:textColor">@color/background_white_gray</item>
        <item name="android:text">Button</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

    <style name="ButtonGeneral.ActiveSecondaryWhite">
        <item name="android:backgroundTint">@color/background_white_gray</item>
        <item name="android:fontFamily">@font/baloo_bhai_2_bold</item>
    </style>

<!--    EditText Input -->
    <style name="EditTextGeneral" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:hint">Placeholder</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/login_register_rounded_corner_edit_text</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
    </style>

</resources>