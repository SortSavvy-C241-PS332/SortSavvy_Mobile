        <TextView
            android:id="@+id/contohHeadTextView"
            style="@style/TextContent.DarkGreen.TitleCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Contoh"
            android:textColor="@color/font_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ciriRecyclerView" />

        <!--include contoh array nested-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contohRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            tools:listitem="@layout/item_explore_detail_contoh_snap"
            app:layout_constraintTop_toBottomOf="@+id/contohHeadTextView" />

        <TextView
            android:id="@+id/caraOlahHeadTextView"
            style="@style/TextContent.DarkGreen.TitleCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Cara Olah"
            android:textColor="@color/font_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contohRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/caraOlahRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
