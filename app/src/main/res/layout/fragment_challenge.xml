<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/gradient_green"
    tools:context=".views.main.challenge.ChallengeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/backBtnImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_background_back_button"
            android:contentDescription="@string/back_btn"
            android:src="@drawable/ic_round_arrow_back_white_24" />

        <TextView
            android:id="@+id/questionNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/backBtnImageButton"
            android:paddingEnd="16dp"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:gravity="center_vertical|end"
            android:background="@drawable/icon_background_square_rounded_white"
            android:text="1/2 Soal" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/questionProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/backBtnImageButton"
            android:layout_marginEnd="80dp"
            app:trackThickness="8dp"
            app:trackCornerRadius="16dp"
            tools:progress="40"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginVertical="16dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/baloo_bhai_2_bold"
                android:gravity="center"
                android:textColor="@color/background_dark"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"
                tools:text="Apa itu sampah?" />

            <Button
                android:id="@+id/option0Button"
                style="@style/ButtonGeneral.ActiveSecondaryWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_white_gray_2"
                tools:text="Option A"
                android:textColor="@color/background_dark"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/option1Button"
                style="@style/ButtonGeneral.ActiveSecondaryWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_white_gray_2"
                tools:text="Option B"
                android:textColor="@color/background_dark"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/option2Button"
                style="@style/ButtonGeneral.ActiveSecondaryWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_white_gray_2"
                tools:text="Option C"
                android:textColor="@color/background_dark"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/nextButton"
                style="@style/ButtonGeneral.ActiveLightGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="64dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:padding="8dp"
                android:text="Selanjutnya"
                android:textColor="@color/background_white_gray_2"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>